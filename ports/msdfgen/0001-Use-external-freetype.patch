Subject: [PATCH 1/3] Use external freetype.

---
 CMakeLists.txt | 5 ++---
 1 file changed, 2 insertions(+), 3 deletions(-)

diff --git a/CMakeLists.txt b/CMakeLists.txt
index 1838e4e..49421a9 100644
--- a/CMakeLists.txt
+++ b/CMakeLists.txt
@@ -2,8 +2,6 @@ cmake_minimum_required(VERSION 2.8.12)
 
 project(msdfgen)
 
-find_package(Freetype REQUIRED)
-
 include(CheckCXXCompilerFlag)
 CHECK_CXX_COMPILER_FLAG("-std=c++11" COMPILER_SUPPORTS_CXX11)
 if (COMPILER_SUPPORTS_CXX11)
@@ -64,6 +62,7 @@ file(GLOB_RECURSE msdfgen_SOURCES
 
 include_directories(${FREETYPE_INCLUDE_DIRS})
 include_directories("include")
+link_directories(${FREETYPE_LIBRARY_DIRS})
 
 # Build the library (aliased name because it's the same target name the exe)
 folderize_sources(msdfgen_HEADERS ${CMAKE_SOURCE_DIR})
@@ -77,4 +76,4 @@ target_link_libraries(lib_msdfgen ${FREETYPE_LIBRARIES})
 
 add_executable(msdfgen main.cpp msdfgen.h msdfgen-ext.h)
 target_compile_definitions(msdfgen PRIVATE MSDFGEN_STANDALONE)
-target_link_libraries(msdfgen lib_msdfgen)
+target_link_libraries(msdfgen lib_msdfgen freetype z)
